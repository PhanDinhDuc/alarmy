<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_item_setting">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/newtral_6</item>
        <item name="android:drawableEnd">@drawable/ic_view</item>
    </style>

    <style name="DialogTheme_transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogTheme_transparent_34" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">#99000000</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="TextViewDay">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewMore">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/newtral_6</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text_Number">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <declare-styleable name="my_button_style">
        <attr name="isAllCaps" format="boolean" />
        <attr name="btn_type" format="enum">
            <enum name="primary" value="1" />
            <enum name="disable" value="2" />
        </attr>
    </declare-styleable>

    <style name="TextAppearance.AppCompat.PadNumber" parent="TextAppearance.AppCompat">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:background">@drawable/bg_item_setting</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Custom_Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/thumb_switch</item>
        <item name="android:track">@drawable/custom_track_switch</item>
    </style>

</resources>