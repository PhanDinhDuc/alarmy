    <!--        app:layout_constraintStart_toStartOf="parent" />-->

    <com.alarm.clock.reminder.alarmclock.simplealarm.resource.customView.BaseTextview
        android:id="@+id/txtAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/this_action_can_contain_ads"
        android:textColor="@color/textPrimaryColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/viewAnimal"
        android:layout_width="60dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/origer"
        tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>