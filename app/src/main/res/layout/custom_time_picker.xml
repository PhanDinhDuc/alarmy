<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.alarm.clock.reminder.alarmclock.simplealarm.view.first_alarm.wheel_picker.WheelPicker
        android:id="@+id/hour_picker"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:align="CENTER"
        app:fadingEdgeEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/baseTextview4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:max="12"
        app:min="0"
        app:textSize="36sp"
        app:wheelItemCount="3"
        app:wrapSelectorWheel="true" />

    <com.alarm.clock.reminder.alarmclock.simplealarm.view.first_alarm.wheel_picker.WheelPicker
        android:id="@+id/minutes_picker"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="36dp"
        app:align="CENTER"
        app:fadingEdgeEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/am_pm_picker2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/baseTextview4"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:max="59"
        app:min="0"
        app:textSize="36sp"
        app:wheelItemCount="3"
        app:wrapSelectorWheel="true" />

    <com.alarm.clock.reminder.alarmclock.simplealarm.view.first_alarm.wheel_picker.WheelPicker
        android:id="@+id/am_pm_picker2"
        android:layout_width="51dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="36dp"
        app:align="CENTER"
        app:fadingEdgeEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/minutes_picker"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:max="1"
        app:min="0"
        app:textSize="24sp"
        app:wheelItemCount="3"
        app:wrapSelectorWheel="false" />

    <com.alarm.clock.reminder.alarmclock.simplealarm.resource.customView.BaseTextview
        android:id="@+id/baseTextview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:divider="#00EBEBEB"
        android:text=":"
        android:textColor="@color/textPrimaryColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/minutes_picker"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/hour_picker"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:layout_constraintVertical_bias="0.47" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="@+id/hour_picker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hour_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="@+id/hour_picker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hour_picker"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:layout_constraintVertical_bias="0.69" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="@+id/minutes_picker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/minutes_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <View

        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="@+id/minutes_picker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/minutes_picker"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:layout_constraintVertical_bias="0.7" />

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/am_pm_picker2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <View
        android:id="@+id/line_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#C6C6C9"
        app:layout_constraintBottom_toBottomOf="@+id/hour_picker"
        app:layout_constraintEnd_toEndOf="@+id/am_pm_picker2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/am_pm_picker2"
        app:layout_constraintTop_toTopOf="@+id/hour_picker"
        app:layout_constraintVertical_bias="0.7" />

    <EditText
        android:id="@+id/edtHour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_background"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="2"
        android:paddingBottom="10dp"
        android:text="09"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="47sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/hour_picker"
        app:layout_constraintStart_toStartOf="@+id/hour_picker"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <EditText
        android:id="@+id/edtMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_background"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="2"
        android:paddingBottom="11dp"
        android:text="09"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="47sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/minutes_picker"
        app:layout_constraintStart_toStartOf="@+id/minutes_picker"
        app:layout_constraintTop_toBottomOf="@+id/view5" />
</androidx.constraintlayout.widget.ConstraintLayout>